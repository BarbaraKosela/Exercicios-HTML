@{
    Layout = "~/Views/Shared/Master.cshtml";
}";
}

@Html.ActionLink("Novo aluno", "Cadastro", "Aluno",
          new { @class = "btn btn-primary float-figth mr-3 mb-2 mt-2" })
<div class="mr-3 ml-3">
    <table class="table table-striped table table-hover">
        <thead>
            <tr class="bg-primary text-white">
                <th>Código</th>
                <th>Nome</th>
                <th>Matricula</th>
                <th>Nota 1</th>
                <th>Nota 2</th>
                <th>Nota 3</th>
                <th>Frequencia</th>
                <th>Faltas</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Models.Alunos aluno in @ViewBag.Alunos)
            {
                <tr>
                    <td>@aluno.Id</td>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Matricula</td>
                    <td>@aluno.Nota1</td>
                    <td>@aluno.Nota2</td>
                    <td>@aluno.Nota3</td>
                    <td>@aluno.frequencia</td>
                    <td>@aluno.Faltas</td>
                    <td>
                        <a href="/Aluno/Editar?id=@aluno.Id" class="btn btn-outline-success"><i class="fa fa-edit"></i>Editar</a>

                        <a href="/Aluno/Excluir?id=@aluno.Id" class="btn btn-outline-danger">
                            <i class="fa fa-trash"></i>Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Matricula</th>
                <th>Nota 1</th>
                <th>Nota 2</th>
                <th>Nota 3</th>
                <th>Frequencia</th>
                <th>Faltas</th>
                <th>Ação</th>
            </tr>
        </tfoot>
    </table>
</div>


